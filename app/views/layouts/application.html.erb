<!DOCTYPE html>
<html>
  <head>
    <title>Pack</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="<%= controller_name %> <%= action_name %>">
<nav id="topNav" class="navbar navbar-expand-lg fixed-top">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggler collapse" data-toggle="collapse" data-target="#bs-navbar">
            <span class="navbar-toggler-icon"></span>
      </button>
      <a class="navbar-brand page-scroll" href="/"><%=image_tag image_path('logo.jpg'), class: 'logo-sm'%> Pack!</a>
    </div>
    <div class="collapse navbar-collapse" id="bs-navbar">
      <ul class="nav navbar-nav">
          <% if current_page?(controller: 'landing', action: 'index')%>
        <li>
          <a class="page-scroll" href="#one">About</a>
        </li>
        <li>
          <a class="page-scroll" href="#two">How it Works</a>
        </li>
        <% else %>
        <li>
          <a href="/#one">About</a>
        </li>
        <li>
          <a href="/#two">How It Works</a>
        </li>
        <% end %>

      </ul>
      <ul class="nav navbar-nav ml-auto">
    <% if current_user %>
      <li>
        <%= link_to 'Dashboard', dashboard_path %>
        <%= link_to 'Sign Out', destroy_user_session_path, :method => :delete %>
        </li>
      <% else %>
        <li>
          <%= link_to "Join the Pack", join_path %>
          <% end %>
        </li>

      </ul>
    </div>
  </div>
</nav>

  <%= yield %>

  <footer id="footer" class="footer">
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-6 col-md-2 column">
          <h6>Information</h6>
          <ul class="list-unstyled">
            <li><a href="">Copyright Pack</a></li>

          </ul>
        </div>
        <div class="col-sm-6 col-md-2 column">
          <h6>About</h6>
          <ul class="list-unstyled">
            <li><a href="">Don't Contact Us</a></li>
          </ul>
        </div>

        <div class="col-sm-12 col-md-2 offset-md-6 column">
          <ul class="list-inline m-3">
            <li class="list-inline-item"><a rel="nofollow" href="http://www.twitter.com" title="Twitter"><i class="icon-lg fab fa-twitter"></i></a></li>
            <li class="list-inline-item"><a rel="nofollow" href="http://www.facebook.com" title="Facebook"><i class="icon-lg fab fa-facebook"></i></a></li>
            <li class="list-inline-item"><a rel="nofollow" href="http://wwww.instagram.com" title="Instagram"><i class="icon-lg fab fa-instagram"></i></a></li>
          </ul>
        </div>
      </div>
   </footer>
  </body>
</html>
