
    <fieldset class="auth-box hide" id="login-box">
      <a class="active fs-title user-auth-toggle">Sign Up</a>
      <a class="fs-title user-auth-toggle">Login</a>
      <h3 class="fs-subtitle">Welcome back</h3>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email" %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "off", placeholder: "password" %>
      </div>

      <div class="actions">
        <%= f.submit "Log in", :class => "action-button" %>
      </div>
    <% end %>
    </fieldset>
