<div class="row mt-3">
  <div class="col-lg-12">
    <div class="row">
      <div class="col-lg-5 mr-3">
        <div class="col-lg-12 col-sm-12 mr-3">

          <table class="table table-dark">
            <div class="row">
              <div class="col-lg-12 col-sm-12">
              
                <h3><%=@user.dogs.first.name%>'s Scheduled Walks! </h3>
               
              
                <thead>
                  <tr>

                    <th scope="col">Date</th>

                    <th scope="col">Start Time</th>
                    <th scope="col">End Time</th>
                    <th scope="col">Walker</th>
                  </tr>
                </thead>
                <tbody>
                   
                 <% @dog.walk_requests.length.times do |walk| %>
                  <tr> 

                    <td><%=@dog.walk_requests.order(:date)[walk].date%></td>
                  
                    <td>start time</td>
                    <td>end time</td>
                    <td><%=@dog.walk_requests[walk].walker_id%></td>
                  </tr>
                 <%end%>
                </tbody>
          </table>
          </div>
          </div>

          <div class="col-5 mr-3">
            <div class="col-lg-12 col-sm-12 mr-3">

              <table class="table table-dark">

                <div class="col-lg-12 col-sm-12">
                  <h3>Hey <%=@user.first_name%>, how about a walk?</h3>
                  <thead>
                    <tr>

                      <th scope="col">Dog</th>
                      <th scope="col">Owner</th>
                      <th scope="col">Start</th>
                      <th scope="col">End</th>
                      <th scope='col'>Location</th>
                    </tr>
                  </thead>
                  <tbody>
                  <% @walks.length.times do |walk| %>

                 
                    <tr>

                      <td><%=@walks[walk].dog.name%></td>
                      <td>Otto</td>
                      <td>blaaa</td>
                      <td>blaablaa</td>
                    </tr>
                 <%end%>
                  </tbody>
              </table>
              </div>
            </div>


            <!-- Instance variable here -->
            <h3>

            </h3>

          </div>
        </div>

        <!-- Instance variable here -->
        <h3>

        </h3>

      </div>
    </div>
  </div>